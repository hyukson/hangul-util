{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"]
}
